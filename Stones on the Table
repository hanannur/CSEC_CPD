def count_stones_to_remove():
   
    n = int(input().strip())
    
    s = input().strip()
    
    
    count = 0
    
   
    for i in range(n - 1):
        if s[i] == s[i + 1]:
            count += 1  # Increment count if two neighboring stones are of the same color
            
    
    print(count)


count_stones_to_remove()
